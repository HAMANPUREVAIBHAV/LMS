<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LMS</title>
    <link rel="stylesheet" href="./css/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="min-h-screen flex flex-col">
    <!-- Header -->
    <%- include("header.ejs") %>
    
    <!-- Main Content -->
    <div class="flex-grow grid grid-cols-6 mb-4">
      <!-- Left Column for Chapters and Pages -->
      <div class="col-start-2 col-span-2 pr-4">
        <h1 class="text-4xl font-semibold text-gray-700 py-4">
          Course Name
        </h1>
        <p class="py-2 text-gray-600">
           Course description
        </p>
        <p class="py-2 text-gray-600 font-medium">
          Educator: <span class="font-bold">John Doe</span>
        </p>

        <% for(let index = 0; index < 5; index++) { 
          const pageId = `page-${index + 1}`;  // Generate unique page ID for each chapter
        %>
          <div class="py-4">
            <div class="box-content bg-orange-500 text-white text-lg font-medium rounded-lg py-4 hover:box-content shadow-md hover:shadow-lg hover:bg-orange-600 transition-all duration-300 ease-in-out cursor-pointer" onclick="togglePages('<%= pageId %>-pages')">
              <p class="pl-4">Chapter <%= index + 1 %></p>
            </div>
            <ul id="<%= pageId %>-pages" class="hidden pl-8 mt-2 transition-all duration-500 ease-in-out">
              <li class="py-2 pl-4 pr-2 bg-gray-200 rounded-lg mb-2 border-l-4 border-orange-500 hover:bg-gray-300 hover:shadow-md transition-all duration-300 ease-in-out cursor-pointer" onclick="showPageContent('Content for Page 1 of Chapter <%= index + 1 %>', '<%= index + 1 %>')">
                Page 1 for <%= pageId %>
              </li>
              <li class="py-2 pl-4 pr-2 bg-gray-200 rounded-lg mb-2 border-l-4 border-orange-500 hover:bg-gray-300 hover:shadow-md transition-all duration-300 ease-in-out cursor-pointer" onclick="showPageContent('Content for Page 2 of Chapter <%= index + 1 %>', '<%= index + 1 %>')">
                Page 2 for <%= pageId %>
              </li>
              <li class="py-2 pl-4 pr-2 bg-gray-200 rounded-lg mb-2 border-l-4 border-orange-500 hover:bg-gray-300 hover:shadow-md transition-all duration-300 ease-in-out cursor-pointer" onclick="showPageContent('Content for Page 3 of Chapter <%= index + 1 %>', '<%= index + 1 %>')">
                Page 3 for <%= pageId %>
              </li>
            </ul>
          </div>
        <% } %>
      </div>

      <!-- Right Column for Page Content -->
      <div class="col-start-4 col-span-3 p-4 border-l-2 border-gray-300">
        <h2 class="text-2xl font-semibold text-gray-800">Page Content</h2>
        <div id="page-content" class="mt-4 p-4 bg-gray-100 rounded-lg shadow-md">
          <p>Select a page to view its content here.</p>
        </div>
        <div class="mt-4">
          <input type="checkbox" id="complete-checkbox" class="form-checkbox h-5 w-5 text-orange-600 border-gray-300 rounded focus:ring-orange-500" />
          <label for="complete-checkbox" class="ml-2 text-gray-700">Mark as complete</label>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <%- include('footer.ejs') %>

    <script>
      function togglePages(id) {
        const pagesList = document.getElementById(id);
        pagesList.classList.toggle('hidden');
      }

      function showPageContent(content, chapter) {
        const pageContentDiv = document.getElementById('page-content');
        pageContentDiv.innerHTML = `<h3 class="text-xl font-bold">Content for Page ${chapter}</h3><p>${content}</p>`;
      }
    </script>
  </body>
</html>
